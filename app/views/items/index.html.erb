<h1>Items</h1>

<% if @items.empty? %>
  <b>No items in store </b>
<% else %>
<% end %>

<table>
  <tr>
    <th>item id</th>
    <th>Name</th>
    <th>Price</th>
    <th></th>
  </tr>

<% @items.each do |i| %>

  <tr>
    <td><%= i.id %></td>
    <p><%= link_to i.name, item_path(i) %></p>
    <td><%= i.price %> руб.</td>
    <td><%= link_to "Удалить", i, method: :delete, data: { confirm: "Точно удалить?"} %></td>
  </tr>

<% end %>
